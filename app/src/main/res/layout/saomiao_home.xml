<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sao_miao"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin10"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/a_s"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/height20" />

        <TextView
            android:text="扫啊扫"
            android:layout_marginTop="@dimen/margin4"
            android:textSize="@dimen/textSize12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sou_suo"
        android:layout_marginTop="@dimen/margin8"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin30"
        android:layout_marginRight="@dimen/margin3"
        android:layout_weight="1"
        android:background="@drawable/saomiao_center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="@dimen/margin8"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/height20"
            android:src="@drawable/a_4" />
        <TextView
            android:layout_width="0dp"
            android:text="有家的地方就有奥克斯"
            android:textColor="#9b9b9b"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="@dimen/margin10"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/height20"
            android:src="@drawable/root" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xiao_xi"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/margin10"
            android:src="@drawable/a9x"
            android:layout_gravity="center"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/height20" />

        <TextView
            android:text="消息"
            android:layout_marginTop="@dimen/margin4"
            android:textSize="@dimen/textSize12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
